<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Contact us</title>
    <link rel="stylesheet" href="contact.css" />
  </head>
  <body>
    <!-- include navbar  -->
    <%-include("./partials/nav.ejs") %>
    <!-- contact section  -->
    <h2>Contact us</h2>
    <div class="contact-section">
      <div class="contact-email-content">
        <form action="/" method="post">
          <div>
            <label for="">Email</label>
            <br />
            <input type="email" name="email" placeholder="Your Email" />
          </div>
          <div>
            <label for="">Number</label><br />
            <input type="number" name="number" placeholder="Your Number" />
          </div>
          <div>
            <label for="">Message</label><br />
            <textarea name="message" placeholder="Your Messages"></textarea>
          </div>
          <div><input type="Submit" value="send" name="send" /></div>
        </form>
      </div>
      <div class="contact-map-content">
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d471629.22488125355!2d87.63451761148238!3d22.55652778103841!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x39f88249be00ca5f%3A0x3f5496c42f4bd6e8!2sHowrah%2C%20West%20Bengal!5e0!3m2!1sen!2sin!4v1678098685284!5m2!1sen!2sin"
          width="400"
          height="300"
          style="border: 0"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
        ></iframe>
      </div>
    </div>
    <!-- footer section  -->

    <footer>
      <hr />
      <p>&copy;All Right Reserved 2016-2023</p>
      <p>Bright Future Academy</p>
    </footer>
  </body>
</html>
